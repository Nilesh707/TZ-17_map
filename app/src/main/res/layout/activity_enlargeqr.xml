<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technozion.tz_17.Events"
    >
    <include
        layout="@layout/app_bar"
        android:id="@+id/event_app_toolbar"
        />

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/event_app_toolbar"
        android:paddingRight="1dp"
        android:id="@+id/sv"
        android:layout_above="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            tools:context="com.technozion.tz_17.Team">


            <ImageView
                android:layout_below="@+id/layer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/qrcode"
                android:layout_gravity="center"
                android:paddingTop="10sp"
                android:paddingLeft="5sp"
                android:paddingRight="5sp"
                android:paddingBottom="10sp"
                android:src="@drawable/notavailable"/>

            <ImageView
                android:layout_below="@id/qrcode"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#2b282e"
                />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
