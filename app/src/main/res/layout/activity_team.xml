<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technozion.tz_17.Event_main">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.technozion.tz_17.Events"
    >
    <include
        layout="@layout/app_bar"
        android:id="@+id/event_app_toolbar"
        />

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/event_app_toolbar"
    android:paddingRight="1dp"
    android:id="@+id/sv"
    android:layout_above="@+id/relativeLayout">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.technozion.tz_17.Team">


    <ImageView
            android:layout_below="@+id/layer1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/kiran"
            android:paddingTop="10sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/anshul"
        android:layout_below="@+id/layer1"
        android:layout_alignParentLeft="true"
        android:paddingTop="10sp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/vivek"
        android:id="@+id/layer1"
        android:paddingTop="10sp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>
</RelativeLayout>

<fragment
android:id="@+id/drawer_fragment"
android:layout_width="280dp"
android:layout_height="match_parent"
android:layout_gravity="start"
android:name="com.technozion.tz_17.Drawer"
app:layout="@layout/fragment_drawer"
tools:layout="@layout/fragment_drawer" />

    </android.support.v4.widget.DrawerLayout>
